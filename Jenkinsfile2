pipeline {

  agent {
    kubernetes {
      label 'k8s-jnlp-test'
      defaultContainer 'eigen-jnlp-slave'

      yaml """
apiVersion: v1
kind: Pod
metadata:
  namespace: dev
  labels:
    app: jnlp
    owner: test-jnlp

spec:
  containers:
  - name: jnlp-base
    image: registry-vpc.cn-hangzhou.aliyuncs.com/eigenlab/eigen-jnlp-slave:latest
    privileged: true
  imagePullSecrets: 
  - name: aliyun-registry
  volumeMounts:
        - mountPath: /var/run/docker.sock
        - hostPath: /var/run/docker.sock
"""
    }
  }

  stages {
    stage('test') {
      steps {
        container('jnlp-base') {
          sh 'echo hellow'
        }
      }
    }
  }
}
