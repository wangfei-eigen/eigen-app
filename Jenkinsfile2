pipeline {
  agent {
    kubernetes {
      label 'k8s-jnlp-test'
      defaultContainer 'eigen-jnlp-slave'

      yaml """
apiVersion: v1
kind: Pod
metadata:
  namespace: dev
  labels:
    app: jnlp
    owner: test-jnlp

spec:
  containers:
  - name: jnlp-base
    image: registry-vpc.cn-hangzhou.aliyuncs.com/eigenlab/eigen-jnlp-slave:latest
    command:
    - cat
    tty: true
  imagePullSecrets: 
  - name: aliyun-registry
  volumeMounts:
    - mountPath: /var/run
     name: docker-sock
"""
    }
  }

  stages {
    stage('test') {
      steps {
        container('jnlp-base') {
          sh 'echo hellow'
          sh "pwd"
          sh "id"
          sh "ls -l /opt/k8s-deploy/config"
          sh "ls -l /opt/k8s-deploy/configGenerator"
          
          sh "sleep 600"
        }
      }
    }
  }
}
